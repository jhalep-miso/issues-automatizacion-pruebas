{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "es2018"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
  },
}
